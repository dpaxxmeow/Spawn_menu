<w>
	<frame x="0" y="-2" width="320" height="772" stretch="1">
		<texture>ui_new_game_black_back</texture>
	</frame>
	
	<!-- Title -->
	<cap x="0" y="10" width="320" height="30" stretch="1">
		<text r="250" g="250" b="250" font="letterica18" align="c" vert_align="c">st_ui_weather_editor_title</text>
	</cap>
	
	<!-- Weather files -->
	<cap_weather x="16" y="50" width="120" height="30" stretch="1">
		<text r="200" g="200" b="200" font="letterica16" align="c" vert_align="c">st_ui_weather_editor_file</text>
		<background x="0" y="0" width="120" height="30" stretch="1">
			<texture>ui_button_inv_h</texture>
		</background>
	</cap_weather>
	<list_weather x="160" y="50" width="120" height="30" stretch="1" list_length="10">
		<list_font r="200" g="200" b="200" font="letterica16"/>
		<text_color>
			<e r="200" g="200" b="200"/>
			<d r="100" g="100" b="100"/>
		</text_color>
	</list_weather>
	
	<!-- Hour -->
	<cap_hour x="16" y="90" width="120" height="30" stretch="1">
		<text r="200" g="200" b="200" font="letterica16" align="c" vert_align="c">st_ui_weather_editor_hour</text>
		<background x="0" y="0" width="120" height="30" stretch="1">
			<texture>ui_button_inv_h</texture>
		</background>
	</cap_hour>
	<input_hour x="160" y="90" width="120" height="30"  stretch="1">
		<text complex_mode="1" r="200" g="200" b="200" align="c"  vert_align="c" font="letterica18"/>
		<background x="0" y="0" width="120" height="30" stretch="1">
			<texture>ui_button_inv_t</texture>
		</background>
	</input_hour>
	
	<btn_hour_copy x="16" y="130" width="120" height="30" stretch="1">
		<text align="c" font="letterica16">st_ui_weather_editor_hour_copy</text>
		<texture>ui_button_ordinary</texture>
	</btn_hour_copy>
	<btn_hour_paste x="160" y="130" width="120" height="30" stretch="1">
		<text align="c" font="letterica16">st_ui_weather_editor_hour_paste</text>
		<texture>ui_button_ordinary</texture>
	</btn_hour_paste>
	
	<line_1 x="0" y="170" width="320" height="5" stretch="1">
		<texture>ui_itm_line</texture>
	</line_1>
	
	<!-- Weather parameters -->
	<scroll_par x="8" y="180" width="304" height="470" right_ident="0" left_ident="0" top_indent="0" bottom_indent="0" vert_interval="0" always_show_scroll="0"/>
	<tmp_par x="0" y="0" width="304" height="30"/>
	
	<op_par>
		<cap x="0" y="0" width="120" height="30"  stretch="1">
			<text complex_mode="1" r="200" g="200" b="200" align="l" vert_align="c" font="letterica16"/>
		</cap>
		
		<input x="120" y="0" width="120" height="30"  stretch="1">
			<text complex_mode="1" r="150" g="250" b="250" align="l"  vert_align="c" font="letterica16"/>
		</input>
		<input_r x="120" y="0" width="36" height="30"  stretch="1">
			<text complex_mode="1" r="250" g="100" b="100" align="l"  vert_align="c" font="letterica16"/>
		</input_r>
		<input_g x="160" y="0" width="36" height="30"  stretch="1">
			<text complex_mode="1" r="100" g="250" b="100" align="l"  vert_align="c" font="letterica16"/>
		</input_g>
		<input_b x="200" y="0" width="36" height="30"  stretch="1">
			<text complex_mode="1" r="100" g="100" b="250" align="l"  vert_align="c" font="letterica16"/>
		</input_b>
		<input_a x="240" y="0" width="36" height="30"  stretch="1">
			<text complex_mode="1" r="200" g="200" b="200" align="l"  vert_align="c" font="letterica16"/>
		</input_a>
		
		<list x="120" y="0" width="160" height="30" stretch="1" list_length="10">
			<list_font r="200" g="200" b="50" font="letterica16"/>
			<text_color>
				<e r="200" g="200" b="50"/>
				<d r="100" g="100" b="100"/>
			</text_color>
		</list>
		
		<hl x="116" y="0" width="120" height="30"  stretch="1">
			<texture>ui_button_hl_h</texture>
		</hl>
		<hl_list x="116" y="0" width="160" height="30"  stretch="1">
			<texture>ui_button_hl_h</texture>
		</hl_list>
		<hl_r x="116" y="0" width="36" height="30"  stretch="1">
			<texture>ui_button_hl_h</texture>
		</hl_r>
		<hl_g x="156" y="0" width="36" height="30"  stretch="1">
			<texture>ui_button_hl_h</texture>
		</hl_g>
		<hl_b x="196" y="0" width="36" height="30"  stretch="1">
			<texture>ui_button_hl_h</texture>
		</hl_b>
		<hl_a x="236" y="0" width="36" height="30"  stretch="1">
			<texture>ui_button_hl_h</texture>
		</hl_a>
	</op_par>
	
	<line_2 x="0" y="660" width="320" height="5" stretch="1">
		<texture>ui_itm_line</texture>
	</line_2>
	
	<!-- New preset -->
	<btn_preset x="16" y="680" width="120" height="30" stretch="1">
		<text align="c" font="letterica16">st_ui_weather_editor_new_file</text>
		<texture>ui_button_ordinary</texture>
	</btn_preset>
	<input_preset x="160" y="680" width="120" height="30"  stretch="1">
		<text complex_mode="1" r="200" g="200" b="200" align="c"  vert_align="c" font="letterica16"/>
		<background x="0" y="0" width="120" height="30" stretch="1">
			<texture>ui_button_inv_t</texture>
		</background>
	</input_preset>
	
	<!-- Save current file -->
	<btn_save x="16" y="720" width="120" height="30" stretch="1">
		<text align="c" font="letterica16">st_ui_weather_editor_current_file</text>
		<texture>ui_button_ordinary</texture>
	</btn_save>
	
	<!-- Reload weather -->
	<btn_reload x="160" y="720" width="120" height="30" stretch="1">
		<text align="c" font="letterica16">st_ui_weather_editor_reload</text>
		<texture>ui_button_ordinary</texture>
	</btn_reload>
	
	<!-- Hint -->
	<hint_wnd x="0" y="0" width="300" height="100">
	    <background x="0" y="0" width="300" height="100">
		    <texture>ui_icons_PDA_tooltips</texture>
	    </background>
	    <text x="20" y="20" width="275" height="100">
	    	<text font="letterica18" r="140" g="140" b="140" complex_mode="1" align="l" vert_align="c"/>
	    </text>
	</hint_wnd>
</w>
